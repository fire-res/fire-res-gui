<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" stylesheets="/io/github/fireres/gui/controller/css/style.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:id="component"
            fx:controller="io.github.fireres.gui.controller.modal.export.ExportModalWindow">
    <VBox>
        <HBox fx:id="exportColumns"/>
        <ButtonBar>
            <buttons>
                <Button text="Добавить группу" onAction="#addGroup"/>
                <Button onAction="#exportSamples" text="Экспортировать"/>
            </buttons>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
        </ButtonBar>
    </VBox>
</AnchorPane>
