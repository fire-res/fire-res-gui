<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefWidth="250.0"
            xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="component"
            fx:controller="io.github.fireres.gui.controller.common.BoundShift">
    <children>
        <VBox>
            <Label fx:id="label" prefHeight="16.0"/>
            <TableView fx:id="boundShiftTable" focusTraversable="false" prefHeight="150.0" prefWidth="290.0">
                <placeholder>
                    <Label text="Смещение границы не задано"/>
                </placeholder>
                <columns>
                    <TableColumn fx:id="timeColumn" editable="false" prefWidth="138.0" resizable="false" text="Время"/>
                    <TableColumn fx:id="valueColumn" editable="false" prefWidth="137.0" resizable="false" text="Смещение"/>
                </columns>

                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <VBox.margin>
                    <Insets bottom="15.0"/>
                </VBox.margin>

            </TableView>
        </VBox>
    </children>
</AnchorPane>
