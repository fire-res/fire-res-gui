<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.fireres.gui.component.FireResSpinner?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<TitledPane contentDisplay="RIGHT"
            prefWidth="305.0"
            text="Параметры функции"
            fx:id="component"
            xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.github.fireres.gui.controller.common.FunctionParams">

    <padding>
        <Insets top="15.0"/>
    </padding>
    <AnchorPane>
        <VBox prefWidth="305.0">
            <GridPane>

                <columnConstraints>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>

                <Label prefHeight="16.0" prefWidth="220" text="Коэффициент линейности:"/>

                <FireResSpinner fx:id="linearityCoefficient" editable="true" prefHeight="26.0" prefWidth="80.0"
                                GridPane.columnIndex="1" onLostFocus="#handleLinearityCoefficientChanged"/>

                <Label prefHeight="16.0" prefWidth="220" text="Коэффициент дисперсии:" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets top="15.0"/>
                    </GridPane.margin>
                </Label>

                <FireResSpinner fx:id="dispersionCoefficient" editable="true" prefHeight="26.0" prefWidth="80.0"
                                GridPane.columnIndex="1" GridPane.rowIndex="1" onLostFocus="#handleDispersionCoefficientChanged">
                    <GridPane.margin>
                        <Insets top="15.0"/>
                    </GridPane.margin>
                </FireResSpinner>

                <Label prefHeight="16.0" prefWidth="220" text="Коэффициент разброса функций:" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets top="15.0"/>
                    </GridPane.margin>
                </Label>

                <FireResSpinner fx:id="childFunctionsDeltaCoefficient" editable="true" prefHeight="26.0"
                                prefWidth="80.0" GridPane.columnIndex="1" GridPane.rowIndex="2" onLostFocus="#handleChildFunctionsDeltaCoefficientChanged">
                    <GridPane.margin>
                        <Insets top="15.0"/>
                    </GridPane.margin>
                </FireResSpinner>

                <VBox.margin>
                    <Insets/>
                </VBox.margin>

                <padding>
                    <Insets bottom="15.0"/>
                </padding>

            </GridPane>

            <Label prefHeight="16.0" prefWidth="150.0" text="Точки интерполяции"/>

            <AnchorPane prefWidth="250.0">
                <children>
                    <TableView fx:id="interpolationPoints" focusTraversable="false" prefHeight="150.0"
                               prefWidth="290.0">
                        <placeholder>
                            <Label text="Нет точек интерполяции"/>
                        </placeholder>
                        <columns>
                            <TableColumn fx:id="timeColumn" editable="false" prefWidth="138.0" resizable="false"
                                         text="Время"/>
                            <TableColumn fx:id="valueColumn" editable="false" prefWidth="137.0" resizable="false"
                                         text="Значение"/>
                        </columns>

                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>

                    </TableView>
                </children>
            </AnchorPane>
            <padding>
                <Insets bottom="15.0" left="15.0" top="15.0"/>
            </padding>
        </VBox>
        <padding>
            <Insets left="15.0"/>
        </padding>
    </AnchorPane>
</TitledPane>
