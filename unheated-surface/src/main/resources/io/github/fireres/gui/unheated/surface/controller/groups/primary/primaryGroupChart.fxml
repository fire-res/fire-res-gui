<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.fireres.gui.framework.component.SmoothedLineChart?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="component"
           xmlns="http://javafx.com/javafx/10.0.2-internal"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="io.github.fireres.gui.unheated.surface.controller.groups.primary.PrimaryGroupChart">
    <SmoothedLineChart fx:id="chart" focusTraversable="true"
                       legendSide="RIGHT" maxHeight="1.7976931348623157E308"
                       legendVisible="false"
                       maxWidth="1.7976931348623157E308" prefWidth="5000.0">
        <xAxis>
            <NumberAxis label="Время, мин." side="BOTTOM"/>
        </xAxis>

        <yAxis>
            <NumberAxis label="Температура °C" side="LEFT"/>
        </yAxis>
        <StackPane.margin>
            <Insets bottom="-10.0" right="-10.0" top="-10.0"/>
        </StackPane.margin>
    </SmoothedLineChart>
</StackPane>
